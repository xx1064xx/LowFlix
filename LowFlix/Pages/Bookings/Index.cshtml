@page
@model LowFlix.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "Bookings";
}

<div>
    <h1>@ViewData["Title"]</h1>
    <div class="tableContainer">
        <table>
            <thead>
                <tr>
                    <th>
                        Customer Name
                    </th>
                    
                    <th>@Html.DisplayNameFor(model => model.Bookings[0].RentalDate)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr class="tableRow">

                        <td>
                            @Html.DisplayFor(modelItem => booking.Customer.FirstName)
                            @Html.DisplayFor(modelItem => booking.Customer.LastName)
                        </td>
                        
                        <td>@Model.getDate(booking.RentalDate)</td>
                        <td>
                            <div>
                                <a class="linkButton" asp-page="./Info" asp-route-id="@booking.BookingId">Info</a>
                            </div>
                        </td>
                        <td>
                            <div>
                                <a class="linkButton" asp-page="./Delete" asp-route-id="@booking.BookingId">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div>
        <a class="primaryButton" href="./Bookings/Create">Create manually</a>
    </div>
</div>