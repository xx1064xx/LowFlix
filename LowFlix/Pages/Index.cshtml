@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Overdue bookings</h1>

<div class="tableContainer">
    <table>
        <thead>
            <tr>
                <th>
                    Customer Name
                </th>
                <th>@Html.DisplayNameFor(model => model.Bookings[0].Film.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Bookings[0].RentalDate)</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Bookings)
            {
                <tr class="tableRow">

                    <td>
                        @Html.DisplayFor(modelItem => booking.Customer.FirstName)
                        @Html.DisplayFor(modelItem => booking.Customer.LastName)
                    </td>
                    <td>@Html.DisplayFor(modelItem => booking.Film.Title)</td>
                    <td>@Model.getDate(booking.RentalDate)</td>
                    <td>
                        <div>
                            <a class="linkButton" asp-page="./Bookings/Edit" asp-route-id="@booking.BookingId">Edit</a>
                        </div>
                    </td>
                    <td>
                        <div>
                            <a class="linkButton" asp-page="./Bookings/Delete" asp-route-id="@booking.BookingId">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>