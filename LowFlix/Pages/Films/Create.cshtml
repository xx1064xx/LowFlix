@page
@model LowFlix.Pages.Films.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"] Film</h1>

<div>
    <div class="inputFormDiv">
        <form method="post">
            <div class="formGroup">
                <label asp-for="Film.Title">Title</label>
                <input asp-for="Film.Title" class="inputField" />
            </div>
            <div class="formGroup">
                <label asp-for="Film.Director">Director</label>
                <input asp-for="Film.Director" class="inputField" />
            </div>
            <div class="formGroup">
                <label asp-for="Film.WatchTimeMinutes">Watchtime (minutes)</label>
                <input asp-for="Film.WatchTimeMinutes" class="inputField" />
            </div>
            <div class="formGroup">
                <label asp-for="Film.Year">Year</label>
                <input asp-for="Film.Year" class="inputField" />
            </div>
            <div class="buttonGroup">
                <input type="submit" value="Create" class="btn primaryButton" />
                <a asp-page="Index" class="btn secondaryButton">Cancel</a>
            </div>
        </form>
    </div>
</div>